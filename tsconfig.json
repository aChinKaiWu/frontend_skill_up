{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017", "es2018", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDirs": [
      "ui/src",
      "ui/types"
    ],
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types", "ui/types"]
  },
  "filesGlob": [
    "ui/types/*.d.ts",
  ],
  "include": [
    "ui/src/**/*",
    "ui/types",
  ],
  "exclude": [
    "node_modules",
    "ui/src/**/__tests__/**/*.ts?(x)",
    "ui/src/**/?(*.)(spec|test).ts?(x)"
  ]
}
